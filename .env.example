# Tiga Environment Configuration Example
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# CRITICAL: Security Keys (REQUIRED)
# ============================================
# Generate with: openssl rand -base64 48
JWT_SECRET=

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Generate with: openssl rand -base64 32
CREDENTIAL_KEY=

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=12306
SERVER_GRPC_PORT=12307
DEBUG=false

# ============================================
# Database Configuration
# ============================================
DB_TYPE=sqlite          # sqlite, postgres, mysql
DB_HOST=localhost
DB_PORT=5432
DB_USER=devops
DB_PASSWORD=devops123
DB_NAME=tiga.db
DB_SSLMODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=3600

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# OAuth Configuration (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# Security Configuration
# ============================================
BCRYPT_COST=12

# ============================================
# Database Management
# ============================================
DB_MGMT_QUERY_TIMEOUT=30
DB_MGMT_MAX_RESULT_BYTES=10485760  # 10MB
DB_MGMT_AUDIT_RETENTION_DAYS=90

# ============================================
# Logging
# ============================================
LOG_LEVEL=info          # debug, info, warn, error
LOG_FORMAT=json         # json, text
