# 应用配置
APP_NAME=DevOps Management Platform
APP_ENV=development
APP_PORT=12306
APP_DEBUG=true

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=devops
DB_PASSWORD=devops123
DB_NAME=devops_platform
DB_SSLMODE=disable

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# OAuth 配置（可选）
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# 加密密钥（自动生成，首次启动时填充）
# ENCRYPTION_KEY=  # 留空，程序自动维护

# 数据库管理配置
DB_MGMT_QUERY_TIMEOUT=30                # 查询超时(秒)
DB_MGMT_MAX_RESULT_BYTES=10485760       # 最大结果大小(10MB)
DB_MGMT_AUDIT_RETENTION_DAYS=90         # 审计日志保留天数

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=json
