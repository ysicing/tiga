# Tiga DevOps Platform Configuration

server:
  mode: debug  # debug, release, test
  port: 12306
  read_timeout: 60
  write_timeout: 60

database:
  host: localhost
  port: 5432
  user: tiga
  password: tiga_password
  dbname: tiga
  sslmode: disable
  max_open_conns: 100
  max_idle_conns: 10
  conn_max_lifetime: 3600

security:
  # JWT secret will be auto-generated during installation
  # You can also set it manually here (at least 32 characters recommended)
  jwt_secret: ""
  bcrypt_cost: 10
  encryption_key: ""  # 留空将由程序自动生成(32字节)

database_management:
  # 32字节数据库凭据密钥，留空则程序自动生成
  credential_key: ""
  # Query execution timeout in seconds for SQL/Redis console
  query_timeout_seconds: 30
  # Maximum query result payload in bytes (default 10MB)
  max_result_bytes: 10485760
  # Retain database audit logs for N days before cleanup
  audit_retention_days: 90

logging:
  level: info  # debug, info, warning, error
  format: text # text, json

monitoring:
  enabled: true
  interval: 30  # seconds

# Notification configurations (optional)
notifications:
  email:
    enabled: false
    smtp_host: smtp.example.com
    smtp_port: 587
    username: noreply@example.com
    password: your-smtp-password
    from: noreply@example.com
    use_tls: true

  webhook:
    enabled: false
    url: https://your-webhook-url.com
    method: POST
    timeout: 10
    retry_count: 3

  dingtalk:
    enabled: false
    webhook_url: https://oapi.dingtalk.com/robot/send?access_token=xxx
    secret: your-dingtalk-secret
    at_all: false

  wechat_work:
    enabled: false
    webhook_url: https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx
